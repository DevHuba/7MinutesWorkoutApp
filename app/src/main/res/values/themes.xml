<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.7MinutesWorkout" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

<!--   TB home theme-->
    <style name="Starting" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <!--    TB exercise theme-->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <!-- Primary brand color. -->
        <item name="colorControlNormal">@color/colorBtThree</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/colorBtThree</item>
    </style>

    <!--    Ti bmi theme -->
    <style name="BMIti" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Primary brand color. -->
        <item name="boxStrokeColor">@color/colorTwo</item>
        <item name="hintTextColor">@color/colorTwo</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/colorFive</item>
        <item name="textBackground">@color/colorFour</item>
    </style>

</resources>